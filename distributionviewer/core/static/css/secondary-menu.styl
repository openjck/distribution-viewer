@import 'lib';

$my-height = 35px;

.secondary-menu {
  background-image: radial-gradient(40% 728%, $dark-blue, #000000);
  border-top: 1px solid $dark-blue;
  display: flex;
  height: $my-height;
  justify-content: flex-end; /* So that the gear appears to the very right */
  left: 0;
  padding: 0 30px;
  position: fixed;
  bottom: 0;
  width: 100%;
  z-index: 10;
}

.configure-link, .configure-link img {
  height: 25px;
  width: 25px;
  align-self: center;
}

.secondary-menu-content {
  display: none;
  height: $my-height;
  margin: 0 auto;
  font-size: 12px;
  font-weight: 100;
  line-height: $my-height;
  max-width: 90%;

  .chart-info {
    align-items: center;
    display: flex;
    justify-content: flex-start;
    overflow-x: auto;
    width: 100%;
    white-space: nowrap;
    overflow-x: hidden;

    p {
      padding: 0 20px;
    }
  }
}

@media $base-tablet {
  .secondary-menu {
    bottom: 20px;
  }
}
