@import 'lib';

.axis {
  path,
  line {
    fill: none;
    stroke: $mild-blue;
    stroke-width: 2px;
  }
}

.line {
  fill: none;
  stroke-width: 1.5px;
}

.focus {
  display: none;

  circle {
    fill: #000;
    stroke-width: 2px;
  }
}

for $i in (1..$max-populations) {
  .population-{$i} {
    .line, .focus {
      stroke: lookup('$pop-' + $i + '-color')
    }
  }
}

.tick {
  text {
    fill: $chart-gray;
    font-size: 11px;
    font-weight: 100;
  }
  line {
    opacity: 0.2;
  }
}

.hover-zone {
  fill: none;
  pointer-events: all;
}
